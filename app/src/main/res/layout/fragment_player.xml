<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.PlayerFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playerToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/palette1OffWhite"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/backImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="4dp"
                android:src="@drawable/ic_arrow_back_music"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/playerTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/fjalla_one"
                android:text="Now Playing"
                android:textAlignment="center"
                android:textColor="@color/palette1Orange"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/backImg"
                app:layout_constraintEnd_toStartOf="@+id/favBtn"
                app:layout_constraintStart_toEndOf="@+id/backImg"
                app:layout_constraintTop_toTopOf="@+id/backImg" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/favBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="4dp"
                android:src="@drawable/ic_favourite_outline"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/playerCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:shadowColor="@color/palette1Orange"
            app:cardCornerRadius="1000dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playerToolbar"
            app:strokeColor="#FF5400"
            app:strokeWidth="5dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="225dp"
                android:layout_height="225dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/songCoverImage"
                    android:layout_width="225dp"
                    android:layout_height="225dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/music_img"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/playlistSubImage" />

                <View
                    android:id="@+id/playlistSubImageView"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/playlist_round_view"
                    android:elevation="15dp"
                    app:layout_constraintBottom_toBottomOf="@+id/songCoverImage"
                    app:layout_constraintEnd_toEndOf="@+id/songCoverImage"
                    app:layout_constraintStart_toStartOf="@+id/songCoverImage"
                    app:layout_constraintTop_toTopOf="@+id/songCoverImage" />

                <View
                    android:id="@+id/playlistSubImageView2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/playlist_round_view_2"
                    android:elevation="15dp"
                    app:layout_constraintBottom_toBottomOf="@+id/songCoverImage"
                    app:layout_constraintEnd_toEndOf="@+id/songCoverImage"
                    app:layout_constraintStart_toStartOf="@+id/songCoverImage"
                    app:layout_constraintTop_toTopOf="@+id/songCoverImage" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/musicPlayerWheel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/wheel"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/playerCV" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/musicPlayerHandler"
            android:layout_width="50dp"
            android:layout_height="150dp"
            android:layout_marginEnd="58dp"
            android:layout_marginTop="-34dp"
            android:elevation="25dp"
            android:rotation="35"
            android:src="@drawable/handler"
            app:layout_constraintEnd_toEndOf="@+id/musicPlayerWheel"
            app:layout_constraintTop_toBottomOf="@+id/musicPlayerWheel" />

        <TextView
            android:id="@+id/playerSongTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/fjalla_one"
            android:text="Music Name"
            android:textAlignment="center"
            android:textColor="@color/palette1Orange"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playerCV" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/prevSongBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:elevation="16dp"
            android:foreground="@drawable/ic_player_back"
            app:backgroundTint="@color/palette1Orange"
            app:layout_constraintBottom_toBottomOf="@+id/playPauseBtn"
            app:layout_constraintEnd_toStartOf="@+id/playPauseBtn"
            app:layout_constraintTop_toTopOf="@+id/playPauseBtn" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/playPauseBtn"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="24dp"
            android:elevation="16dp"
            android:src="@drawable/ic_player_play"
            app:cornerRadius="15dp"
            android:background="@drawable/play_pause_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playerSongTitle" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/nextSongBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:elevation="16dp"
            android:foreground="@drawable/ic_player_forward"
            app:backgroundTint="@color/palette1Orange"
            app:layout_constraintBottom_toBottomOf="@+id/playPauseBtn"
            app:layout_constraintStart_toEndOf="@+id/playPauseBtn"
            app:layout_constraintTop_toTopOf="@+id/playPauseBtn" />

        <LinearLayout
            android:id="@+id/seekBarLl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:weightSum="6"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playPauseBtn">

            <TextView
                android:id="@+id/startTimeSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/fjalla_one"
                android:padding="1dp"
                android:text="00:00"
                android:textAlignment="textEnd"
                android:textColor="@color/palette1Orange"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:max="100"
                android:progress="25"
                android:progressDrawable="@drawable/custom_seekbar"
                android:thumb="@drawable/thumb" />

            <TextView
                android:id="@+id/endTimeSeekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/fjalla_one"
                android:padding="1dp"
                android:textAlignment="textStart"
                android:text="00:00"
                android:textColor="@color/palette1Orange"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/featureBtnLl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:weightSum="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBarLl">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/repeatBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:height="0dp"
                android:text="Repeat"
                android:padding="5dp"
                app:icon="@drawable/ic_repeat"
                android:backgroundTint="@android:color/holo_orange_dark"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/equalizerBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="2dp"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:height="0dp"
                android:text="Equalizer"
                app:icon="@drawable/ic_eqalizer"
                android:backgroundTint="@android:color/holo_purple"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/exitTimerBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="5dp"
                app:iconGravity="start"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:height="0dp"
                android:text="Sleep"
                app:icon="@drawable/ic_timer"
                android:backgroundTint="@android:color/holo_red_light"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/shareBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="5dp"
                app:iconGravity="start"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:height="0dp"
                android:text="Share"
                app:icon="@drawable/ic_share"
                android:backgroundTint="@android:color/holo_blue_dark"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/vBoosterBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="5dp"
                app:iconGravity="start"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:height="0dp"
                android:text="Booster"
                app:icon="@drawable/ic_share"
                android:backgroundTint="@color/palette1GreenMedium"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>